<?xml version="1.0" encoding="UTF-8"?>
<actions>
    <action>
        <actionName>run</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:3.3.0:exec</goal>
        </goals>
        <properties>
            <!-- Không tham chiếu ${exec.appArgs} ở đây để tránh vòng lặp -->
            <exec.args>-classpath %classpath ${exec.mainClass}</exec.args>
            <exec.mainClass>Frontend.PortScannerTool</exec.mainClass>
            <exec.executable>java</exec.executable>
        </properties>
    </action>

    <action>
        <actionName>debug</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:3.3.0:exec</goal>
        </goals>
        <properties>
            <exec.vmArgs>-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address}</exec.vmArgs>
            <!-- Bỏ ${exec.appArgs} ở đây để tránh vòng lặp -->
            <exec.args>-classpath %classpath ${exec.mainClass}</exec.args>
            <exec.mainClass>Frontend.PortScannerTool</exec.mainClass>
            <exec.executable>java</exec.executable>
            <jpda.listen>true</jpda.listen>
        </properties>
    </action>

    <action>
        <actionName>profile</actionName>
        <packagings>
            <packaging>jar</packaging>
        </packagings>
        <goals>
            <goal>process-classes</goal>
            <goal>org.codehaus.mojo:exec-maven-plugin:3.3.0:exec</goal>
        </goals>
        <properties>
            <exec.args>-classpath %classpath ${exec.mainClass}</exec.args>
            <exec.mainClass>Frontend.PortScannerTool</exec.mainClass>
            <exec.executable>java</exec.executable>
        </properties>
    </action>
</actions>
